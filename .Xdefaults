!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                      96
Xft.antialias:                true
Xft.rgba:                     rgb
Xft.hinting:                  true
Xft.hintstyle:                hintslight

!-------------------------------------------------------------------------------
! Emacs settings
!-------------------------------------------------------------------------------

Emacs.FontBackend:            xft
Emacs.font:                   Bitstream Vera Sans Mono-10

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------

URxvt.fading:                 0
URxvt.urgentOnBell:           true
URxvt.visualBell:             true
URxvt.loginShell:             true
URxvt.saveLines:              1024
URxvt.internalBorder:         3
URxvt.lineSpace:              0

! Fonts
URxvt.allow_bold:             true
URxvt*font:                   xft:Bitstream Vera Sans Mono:pixelsize=12
URxvt*boldFont:               xft:Bitstream Vera Sans Mono:pixelsize=12

! Fix font space
URxvt*letterSpace:            -1

! Scrollbar
URxvt.scrollStyle:            rxvt
URxvt.scrollBar:              false

! Perl extensions
URxvt.perl-ext-common:        clipboard,default,keyboard-select,matcher
URxvt.matcher.button:         1
URxvt.urlLauncher:            google-chrome

! remove the boring ctrl+shift shortcut
URxvt.iso14755:               false
URxvt.iso14755_52:            false

! Shortcuts
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-P: perl:clipboard:paste_escaped
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.M-c:             perl:keyboard-select:activate
URxvt.keysym.M-s:             perl:keyboard-select:search
URxvt.keysym.M-S-Return:      command:urxvt\ &> /dev/null &!\012

! Cursor
URxvt.cursorBlink:            true
URxvt.cursorUnderline:        false

! Pointer
URxvt.pointerBlank:           true

